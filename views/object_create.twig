{% extends "__layout.twig" %}

{% block content %}
    <h1 style="margin-left: 25px;">Добавление нового класса</h1>
    <hr>

    {% if message %}
        <div class="alert alert-info">
            {{message}}
            <a href="/heroes_tf/{{id}}">открыть новый объект</a>
        </div>
    {% endif %}

    <form action="" enctype="multipart/form-data" method="POST" class="row g-3" style="margin-left: 25px; width:60%;" >
        <div class="col-4">
            <label class="form-label">Название</label>
            <input type="text" class="form-control" name="title">
        </div>
        <div class="col-4">
            <label class="form-label">Краткое описание</label>
            <input type="text" class="form-control" name="description">
        </div>
        <div class="col-4">
            <label class="form-label">Тип</label>
            <select class="form-control" name="type">
                <option value="атака">Атака</option>
                <option value="поддержка">Поддержка</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Картинка</label>
            <input class="form-control" type="file" name="image">
        </div>
        <div class="col-12">
            <textarea name="info" placeholder="Полное описание..." class="form-control" rows="5"></textarea>
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">Добавить</button>
        </div>
    </form>

{% endblock %}
