{% extends "__layout.twig" %}

{% block content %}
    <h1 style="margin-left: 25px;" class = "mt-4">Создание нового типа</h1>
    <hr>

    {% if message %}
        <div class="alert alert-info">
            {{message}}
        </div>
    {% endif %}
    <form class="row g-3" style="margin-left: 25px; width:60%;" enctype = "multipart/form-data" action = "" method = "post">
        <div class="col">
            <label class="form-label">Название</label>
            <input type="text" class="form-control" name="title">
        </div>
        <div class="col">
            <label for="formFileMultiple" class="form-label">Картинка</label>
            <input class="form-control" type="file" id="formFileMultiple" name = "image" multiple>
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">Добавить</button>
        </div>
    </form>

    <h3  style="margin-left: 25px;" class = "mt-4">Существующие типы</h2>
    <hr>
    <div class="row mt-3" style="margin-left: 25px; width:60%;">
        {% for object in new_types %}
        <div class="m-3 text-center col position-relative" style=" border: 1px solid lightgray">
            <div class="mt-2">
                <img class = "m-2" src="{{ object.image}}" style="height:200px; width: 200px;"/>
                <p >{{object.title}}</p>
            </div>
        </div>
        {% endfor %}
    </div>


{% endblock %}